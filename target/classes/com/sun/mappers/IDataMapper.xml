<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sun.dao.IData">
       
	<resultMap id="function" type="com.sun.entity.data.Function">      
		<result property="name" column="name"/> 
		<result property="isChoose" column="isChoose"/> 
	</resultMap> 
  
    <select id="getFunction" parameterType="int" resultMap="function">
       SELECT name,isChoose FROM oa.o_quickuse b,oa.o_function a where a.id = b.fid and b.uid=#{uid };
    </select>
</mapper>